{
  "name": "memorychain",
  "version": "1.0.0",
  "description": "Blockchain-powered digital receipt platform",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:server\" \"pnpm run dev:frontend\" \"pnpm run dev:webhook\"",
    "dev:server": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:frontend": "cd src/frontend && vite",
    "dev:webhook": "npx stripe listen --forward-to localhost:3000/webhook/stripe",
    "build": "hardhat compile && tsc",
    "build:frontend": "cd src/frontend && vite build",
    "test": "vitest run",
    "lint": "eslint --ext .ts,.tsx .",
    "start": "node dist/server.js"
  },
  "keywords": [
    "blockchain",
    "receipts",
    "NFT",
    "ethereum",
    "stripe"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.1",
    "express": "^4.18.2",
    "ipfs-http-client": "^60.0.1",
    "stripe": "^14.3.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.21",
    "@types/node": "^20.8.10",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.53.0",
    "hardhat": "^2.18.3",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.18.0",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.3.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^0.34.6"
  }
}